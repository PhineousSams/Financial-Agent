<div class="modal-body p-4 bg-white">
  <div class="container mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="bg-gray-100 p-4 rounded-lg shadow-md">
        <h5 class="text-lg font-semibold text-gray-700 mb-2">User Information</h5>

        <p class="text-gray-600">Username: <%= @tbl_user.username %></p>

        <p class="text-gray-600">First Name: <%= @tbl_user.first_name %></p>

        <p class="text-gray-600">Last Name: <%= @tbl_user.last_name %></p>
      </div>

      <div class="bg-gray-100 p-4 rounded-lg shadow-md">
        <h5 class="text-lg font-semibold text-gray-700 mb-2">Contact Details</h5>

        <p class="text-gray-600">Email: <%= @tbl_user.email %></p>

        <p class="text-gray-600">Phone: <%= @tbl_user.phone %></p>

        <p class="text-gray-600">Address: <%= @tbl_user.address %></p>
      </div>
    </div>

    <div class="mt-6 bg-gray-100 p-4 rounded-lg shadow-md">
      <h5 class="text-lg font-semibold text-gray-700 mb-2">Additional Details</h5>

      <p class="text-gray-600">ID Number: <%= @tbl_user.id_no %></p>

      <p class="text-gray-600">Date of Birth: <%= @tbl_user.dob %></p>

      <p class="text-gray-600">Sex: <%= @tbl_user.sex %></p>
    </div>
  </div>
</div>
